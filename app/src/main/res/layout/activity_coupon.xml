<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dialog.CouponActivity">

    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/coupon_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="410dp">

        <TextView
                android:id="@+id/coupon_title"
                android:text="优惠"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/coupon_recycler_view"
                android:layout_below="@+id/coupon_title"
                android:layout_above="@+id/coupon_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:overScrollMode="never"/>

        <TextView
                android:id="@+id/coupon_finish"
                android:text="完成"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/coupon_dialog_finish_bg"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="262dp"
                android:layout_height="46dp"/>

    </RelativeLayout>
</RelativeLayout>