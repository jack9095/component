<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kuanquan.universalcomponents.widget.AppBanner
        android:id="@+id/app_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_195" />

    <com.base.library.widget.BannerIndicatorView
            android:id="@+id/indicator_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mar_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#00000000"
            app:app_cell_count="3"
            app:app_current_position="1"
            app:app_cell_radius="8dp"
            app:app_cell_margin="10dp"
            app:app_normal_color="#ffffff"
            app:app_selected_color="#25C58F"
            app:app_indicator_style="CIRCLE"
    />

    <RelativeLayout
            android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="@dimen/mar_45"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_hot_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mar_15"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
